#cloud-config
coreos:
  update:
    reboot-strategy: etcd-lock
  units:
    - name: etcd2.service
      command: start
    # - name: docker.service
    #   drop-ins:
    #     - name: 50-insecure-registry.conf
    #       content: |
    #         [Service]
    #         Environment=DOCKER_OPTS=--insecure-registry={{ blacksmith_variable "insecure-registry" }}
    - name: workspace-updater.service
      command: start
      content: |
        [Unit]
        Description=Blacksmith Workspace Updater
        Documentation=https://github.com/cafebazaar/blacksmith-kubernetes
        [Service]
        ExecStart=/usr/bin/bash /var/lib/blacksmith/workspace-updater.sh
        Restart=always
        RestartSec=10
        [Install]
        WantedBy=multi-user.target
    - name: blacksmith-agent.service
      command: start
      content: |
        [Unit]
        Description=Run Blacksmith Agent
        Requires=docker.service
        After=etcd2.service docker.service
        [Service]
        ExecStart=/tmp/blacksmith-agent.sh
        [Install]
        WantedBy=multi-user.target
{{ if (machine_variable "blacksmith_server") | eq "true"}} 
    - name: blacksmith-bootstrapper.service
      command: start
      content: |
        [Unit]
        Description=Run Blacksmith
        Requires=docker.service
        After=etcd2.service docker.service
        [Service]
        ExecStartPre=/usr/bin/docker pull {{ blacksmith_variable "blacksmith-image" }}
        ExecStart=/tmp/blacksmith-bootstrapper.sh
        ExecStopPost=/usr/bin/docker rm -vf blacksmith
        [Install]
        WantedBy=multi-user.target
{{ end }}

write_files:
  - path: /var/lib/blacksmith/workspace-updater.sh
    encoding: "base64"
    permissions: "0774"
    owner: "root"
    content: {{ b64template "workspace-updater.sh" }}
  - path: /tmp/blacksmith-agent.sh
    encoding: "base64"
    permissions: "0744"
    owner: "root"
    content: {{ b64template "blacksmith-agent.sh" }}
{{ if (machine_variable "blacksmith_server") | eq "true"}}
  - path: /tmp/blacksmith-bootstrapper.sh
    encoding: "base64"
    permissions: "0744"
    owner: "root"
    content: {{ b64template "blacksmith-bootstrapper.sh" }}
  - path: /var/lib/blacksmith/workspaces/initial.yaml
    encoding: "base64"
    permissions: "0744"
    owner: "root"
    content: {{ b64template "initial.yaml" }}    
{{ end }}

ssh_authorized_keys:
{{ range $index, $element := (array_variable "ssh-keys") }}
  - {{ $element.Value }}
{{end}}

